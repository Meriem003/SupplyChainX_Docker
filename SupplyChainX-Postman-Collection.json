            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Jean\",\n  \"lastName\": \"Dupont\",\n  \"email\": \"jean.dupont@supplychainx.com\",\n  \"password\": \"password123\",\n  \"role\": \"CHEF_PRODUCTION\"\n}"
